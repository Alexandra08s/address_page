mixin button(type, option, content)
  if type === 'link'
    a(href=option).btn= content
  else
    button(type=option).btn= content

mixin video(url, thumbnailJPGSrc, thumbnailWebpSrc, alt, btnType)
  .video
    a.video__link(href=url)
      picture
        source(srcset=thumbnailWebpSrc, type='image/webp')
        img.video__media(src=thumbnailJPGSrc, alt=alt)
    button.video__button(type='button', aria-label='Запустить видео')
      if btnType === 'custom'
        svg(
          x='0px',
          y='0px',
          width='75',
          height='75',
          viewBox='0 0 50 50',
        ).video__button-icon
          g#surface1
            path(d='M 10 5.25 L 10 44.746094 L 43.570313 25 Z')
      else
        svg(width='68', height='48', viewBox='0 0 68 48')
          path.video__button-shape(d='M66.52,7.74c-0.78-2.93-2.49-5.41-5.42-6.19C55.79,.13,34,0,34,0S12.21,.13,6.9,1.55 C3.97,2.33,2.27,4.81,1.48,7.74C0.06,13.05,0,24,0,24s0.06,10.95,1.48,16.26c0.78,2.93,2.49,5.41,5.42,6.19 C12.21,47.87,34,48,34,48s21.79-0.13,27.1-1.55c2.93-0.78,4.64-3.26,5.42-6.19C67.94,34.95,68,24,68,24S67.94,13.05,66.52,7.74z')
          path.video__button-icon(d='M 45,24 27,14 27,34')

mixin nav-toggle(elements)
  label(aria-label="Меню").toggle
    input.toggle__check(type='checkbox')
    .toggle__btn
      span.toggle__line.toggle__line_1
      span.toggle__line.toggle__line_2
      span.toggle__line.toggle__line_3
    p.lids
      span.lids__value
    ul.toggle__field
      each tab in elements
        li.toggle__item
          a.toggle__link(href=tab.link alt=tab.label)= tab.label